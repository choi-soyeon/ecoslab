{% assign footer_name = site.first_name | default: '' %}
{% if site.middle_name and site.middle_name != '' %}
  {% assign footer_name = footer_name | append: ' ' | append: site.middle_name %}
{% endif %}
{% if site.last_name and site.last_name != '' %}
  {% assign footer_name = footer_name | append: ' ' | append: site.last_name %}
{% endif %}
{% assign footer_name = footer_name | strip %}

{% capture footer_contents %}
  &copy; Copyright {{ site.time | date: '%Y' }}
  {{ footer_name }}{% if footer_name != '' %}.{% endif %} {{ site.footer_text | strip }}
  {% if site.impressum_path %}
    <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
  {% endif %}
  {% if site.last_updated %}
    Last updated: {{ 'now' | date: '%B %d, %Y' }}.
  {% endif %}
{% endcapture %}

{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0">
      {{ footer_contents }}
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    {% if site.newsletter.enabled %}
      {% include newsletter.liquid %}
    {% endif %}

    <div class="container">
      {{ footer_contents }}
    </div>
  </footer>
{% endif %}
